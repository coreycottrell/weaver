# Trading Arena Environment Configuration
# Copy to .env and fill in values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=arena
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=trading_arena

# Full database URL (used by API)
# For docker-compose: postgresql+asyncpg://arena:password@db:5432/trading_arena
# For local dev: postgresql+asyncpg://arena:password@localhost:5432/trading_arena
DATABASE_URL=postgresql+asyncpg://arena:your_secure_password_here@db:5432/trading_arena

# =============================================================================
# APPLICATION
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Create tables on startup (set false in production, use migrations)
CREATE_TABLES=true

# Echo SQL queries (for debugging)
ECHO_SQL=false

# =============================================================================
# SECURITY
# =============================================================================
# CORS allowed origins (comma-separated)
# Example: https://arena.aiciv.org,https://admin.aiciv.org
ALLOWED_ORIGINS=http://localhost:3000

# =============================================================================
# ED25519 KEYS (Base64 encoded)
# =============================================================================
# Generate with: python tools/sign_message.py generate --output ./arena.key
# Then base64 encode: base64 -w 0 arena.key

# WEAVER collective private key (for signing)
# WEAVER_PRIVATE_KEY=base64_encoded_private_key

# Known collective public keys (for verification)
# ACGEE_PUBLIC_KEY=base64_encoded_public_key
# SAGE_PUBLIC_KEY=base64_encoded_public_key

# =============================================================================
# OPTIONAL: External Services
# =============================================================================
# Price feed API (for order matching in Phase 2)
# PRICE_FEED_API_KEY=your_api_key
# PRICE_FEED_URL=https://api.coingecko.com/api/v3
